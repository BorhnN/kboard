<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:title="Options">
        <CheckBoxPreference
            android:key="autospace"
            android:title="Auto-space words"
            android:defaultValue="true"
            android:summary="Add spaces between words if for some bizarre reason you need multiple words."
            />
        <CheckBoxPreference
            android:key="autosend"
            android:title="Auto-send words"
            android:defaultValue="false"
            android:summary="Try and send automatically after each word (if the app supports it)."
            />
    </PreferenceCategory>

    <PreferenceScreen
        android:key="custom_keys"
        android:title="Custom Keys"
        android:persistent="false">
        <PreferenceCategory
            android:summary="Key 1"
            android:title="Key 1" >
            <EditTextPreference
                android:key="normal1"
                android:title="Normal"
                android:defaultValue="k"/>
            <EditTextPreference
                android:key="shifted1"
                android:title="Shifted"
                android:defaultValue="k."/>
        </PreferenceCategory>
        <PreferenceCategory
            android:summary="Key 2"
            android:title="Key 2" >
            <EditTextPreference
                android:key="normal2"
                android:title="Normal"
                android:defaultValue="cool"/>
            <EditTextPreference
                android:key="shifted2"
                android:title="Shifted"
                android:defaultValue="kl."/>
        </PreferenceCategory>
        <PreferenceCategory
            android:summary="Key 3"
            android:title="Key 3" >
            <EditTextPreference
                android:key="normal3"
                android:title="Normal"
                android:defaultValue="lol"/>
            <EditTextPreference
                android:key="shifted3"
                android:title="Shifted"
                android:defaultValue="lol."/>
        </PreferenceCategory>
        <PreferenceCategory
            android:summary="Key 4"
            android:title="Key 4" >
            <EditTextPreference
                android:key="normal4"
                android:title="Normal"/>
            <EditTextPreference
                android:key="shifted4"
                android:title="Shifted"/>
        </PreferenceCategory>
        <PreferenceCategory
            android:summary="Key 5"
            android:title="Key 5" >
            <EditTextPreference
                android:key="normal5"
                android:title="Normal"
                android:defaultValue="ಠ_ಠ"/>
            <EditTextPreference
                android:key="shifted5"
                android:title="Shifted"
                android:defaultValue="ಥ_ಥ"/>
        </PreferenceCategory>
        <PreferenceCategory
            android:summary="Key 6"
            android:title="Key 6" >
            <EditTextPreference
                android:key="normal6"
                android:title="Normal"
                android:defaultValue="right..."/>
            <EditTextPreference
                android:key="shifted6"
                android:title="Shifted"
                android:defaultValue="Right."/>
        </PreferenceCategory>
    </PreferenceScreen>

</PreferenceScreen>
